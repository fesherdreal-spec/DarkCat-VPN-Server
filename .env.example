# --- Flask Application Settings ---
# CRITICAL: This MUST be a cryptographically secure random string of at least 32 bytes.
# DO NOT use a weak or predictable key.
# Generate one with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=

# Set to "True" for local development ONLY.
# NEVER enable debug mode in a production environment.
FLASK_DEBUG=False


# --- Database Configuration ---
# Set DB_TYPE to one of: sqlite, postgres, mysql
DB_TYPE=sqlite

# --- SQLite Settings (if DB_TYPE=sqlite) ---
DB_NAME=vpn_server.db

# --- PostgreSQL Settings (if DB_TYPE=postgres) ---
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vpn_db

# --- MySQL Settings (if DB_TYPE=mysql) ---
MYSQL_USER=user
MYSQL_PASSWORD=password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=vpn_db


# --- Redis Configuration for Sessions ---
# The application will NOT start if it cannot connect to Redis.
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_USE_TLS=False


# --- Application Logic ---
# The default VPN configuration link assigned to new users upon registration.
DEFAULT_CONFIG="vless://your-default-config-link-here"

# --- Application Logic & Security ---
# The username of the super-administrator. This user cannot be deleted or modified via the API.
ROOT_ADMIN_USER=root

# Set to 'True' to allow public user registration via the /register endpoint.
# For production, it's highly recommended to set this to 'False'.
ALLOW_REGISTRATION=False

# Comma-separated list of IP addresses from which admin actions are permitted.
# Supports both IPv4 and IPv6. Localhost is included by default for development.
ADMIN_IPS="127.0.0.1,::1"


#https://api.github.com/repos/{owner}/{repo}/releases/latest
LATEST_RELEASE_URL=